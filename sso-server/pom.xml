    <modelVersion>4.0.0</modelVersion>

    <description> 单点登录demo 服务端认证中心 </description>

    <groupId>com.ww.sso.server</groupId>
    <artifactId>sso-server</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
